<!DOCTYPE html>
<html>
    <%- include('./partials/head.ejs') %>
<body>
    
    <%- include('./partials/nav.ejs') %>
    
    <div class="data">
        <h2>Team Standings</h2>
        <% if (teams.length > 0) { %>
            <table>
                <tr><th>Team Name</th><th>Wins</th><th>Tie</th><th>Loss</th><th>Points</th><th>Owner</th></tr>
                <% teams.forEach(team => { %>
                    <tr>
                        <td>
                            <a href="/team-standings/<%= team.teamAbv %>">
                                <img src="<%- team.espnLogo1 %>" alt="<%= team.teamCity + " " + team.teamName %> ESPN Logo" style="width: 30px;">
                                <%= team.teamCity + " " + team.teamName %>
                            </a>
                        </td>
                        <td><%= team.wins %></td>
                        <td><%= team.tie %></td>
                        <td><%= team.loss %></td>
                        <td><%= team.points %></td>
                        <td>
                            <a href="/owner-standings/<%= team.owner %>">
                                <%= team.owner %>
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </table>
        <% } else { %>
            <p>There is no team data to display.</p>
        <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>